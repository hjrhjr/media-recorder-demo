{
	"manifest_version": 2,
	"name": "MediaRecorder",
	"description": "MediaRecorder extension description",
	"version": "0.2",

	"web_accessible_resources": [
		"nacl/video_encoder_main-x86-64.nexe",
		"nacl/manifest.nmf"
	],

	"externally_connectable": {
		"matches": ["*://localhost:*/*", "*://*.challengeu.com/*"]
	},

	"permissions" : [
		"tabs",
		"activeTab",
		"desktopCapture",
		"unlimitedStorage"
	],

	"content_security_policy": "default-src 'self'",

	"background": {
		"scripts": ["js/background.js"]
	}
}