{
	"manifest_version": 2,
	"name": "MediaRecorder",
	"description": "MediaRecorder extension description",
	"version": "0.2",

	"externally_connectable": {
		"matches": ["*://localhost:*/*", "*://*.challengeu.com/*"]
	},

	"permissions" : [
		"tabs",
		"activeTab",
		"desktopCapture"
	],

	"content_security_policy": "default-src 'self'",

	"background": {
		"scripts": ["js/background.js"]
	}
}